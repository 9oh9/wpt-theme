<div class='o-grid__col o-grid__col--2-4-m o-grid__col--1-3-l c-post-card-wrap js-post-card-wrap'>
  <div class='c-post-card'>

    {{#if feature_image}}
      <div class='c-post-card__media'>
        <a href='{{ url }}' class='js-fadein c-post-card__image' style='background-image: url({{ feature_image }})' aria-label='{{ title }}' aria-hidden='true' role='presentation' tabindex='-1'>
          {{#if featured}}
          <span title='{{t "Featured Post" }}'>
            <span class='c-post-card--featured__icon' data-icon='ei-star' data-size='s'></span>
          </span>
          {{/if}}
        </a>
      </div>
    {{/if}}

    <a href='{{ url }}' class='c-post-card__info {{#unless feature_image}}c-post-card__info--no-image{{/unless}}'>
      <h2 class='c-post-card__title'>{{ title }}</h2>

      <p class='c-post-card__excerpt'>
        {{ excerpt characters='140' }}
      </p>
    </a>

    <div class='c-post-card__footer'>
      {{#if tags}}
        <div class='c-post-card__tags'>
          <div class='icon icon--ei-tag icon--s c-post-card__icon'>
            <svg class='icon__cnt'><use xlink:href='#ei-tag-icon'></use></svg>
          </div>
          {{ tags separator=', ' limit=1 }}
        </div>
      {{/if}}

      <div class='c-post-card__author u-hidden'>
        <div class='icon icon--ei-user icon--s c-post-card__icon'>
          <svg class='icon__cnt'><use xlink:href='#ei-user-icon'></use></svg>
        </div>
        {{#primary_author}}<a href='{{ url }}'>{{ name }}</a>{{/primary_author}}
      </div>

      <div class='c-post-card__date'>
        <div class='icon icon--ei-clock icon--s c-post-card__icon'>
          <svg class='icon__cnt'><use xlink:href='#ei-clock-icon'></use></svg>
        </div>
        <time datetime='{{ date format='YYYY-MM-DD' }}' title='{{ date format='DD MMMM YYYY' }}'>{{ date format='DD MMM YYYY' }}</time>
      </div>
    </div>

  </div>
</div>