<footer class='c-footer'>
  <div class='o-grid'>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m c-footer-widget-wrap {{#unless @labs.subscribers}} o-grid__col--2-4-l {{/unless}} {{#if @labs.subscribers}} o-grid__col--1-3-l {{/if}}'>
      <div class='c-footer-widget'>
        <h3 class='c-footer-widget__title'><span>{{t 'Tags' }}</span></h3>

        <div class='c-footer-widget__body'>
          {{#get 'tags' limit='all'}}
            <ul class='c-footer-list o-plain-list c-widget-tags'>
              {{#foreach tags}}
                <li class='c-widget-tags__item'><a href='/tag/{{slug}}' class='c-widget-tags__link'>{{ name }}</a></li>
              {{/foreach}}
            </ul>
          {{/get}}
        </div>
      </div>
    </div>

    <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m c-footer-widget-wrap {{#unless @labs.subscribers}} o-grid__col--2-4-l {{/unless}} {{#if @labs.subscribers}} o-grid__col--1-3-l {{/if}}'>
      <div class='c-footer-widget'>
        <h3 class='c-footer-widget__title'><span>Instagram</span></h3>

        <div class='c-footer-widget__body'>
          <div id='instafeed' class='c-widget-instagram'></div>
        </div>
      </div>
    </div>

    {{#if @labs.subscribers}}
      <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m o-grid__col--1-3-l c-footer-widget-wrap'>
        <div class='c-footer-widget'>
          <h3 class='c-footer-widget__title'><span>{{t 'Newsletter' }}</span></h3>

          <div class='c-footer-widget__body'>
            <p class='u-font-size-small'>{{t 'Join the newsletter to receive the latest updates in your inbox.' }}</p>
            {{  subscribe_form
              form_class='c-subscribe-form'
              input_class='c-subscribe-form__input'
              placeholder=(t 'Email')
              button_class='c-subscribe-form__btn c-btn c-btn--active c-btn--small c-btn--full'
          }}
          </div>
        </div>
      </div>
    {{/if}}

    <div class='o-grid__col o-grid__col--full'>
      <div class='c-footer__bottom'>
        <div class='o-grid'>

          <div class='o-grid__col o-grid__col--4-4-s o-grid__col--2-4-m'>
            <div class='u-font-size-tiny c-footer__copyright'>
              &copy; {{ date format='YYYY' }} {{ @site.title }} - {{{t "Published with {ghostlink}" ghostlink="<a href=\"https://ghost.org\">Ghost</a>" }}}
            </div>
          </div>

        </div>
      </div>
    </div>

  </div>
</footer>